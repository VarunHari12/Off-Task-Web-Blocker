{

    "manifest_version": 3,
    "name": "Off Task Blocker",
    "version": "1.0.1",
    
    "host_permissions": [
        "*://*/*"
      ],

      "permissions": [
        "storage"
      ],

    "content_scripts": [
      {
        "matches": ["*://*/*"],
        "js": ["content.js"]
      }
    ],

    "background": {
        "service_worker": "background.js"
      },

      "action": {
        "default_popup": "popup.html"
  },

    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self';"
}

}
   